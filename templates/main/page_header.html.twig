<div class="row mt-2 pt-3">
    <div class="col-12 mb-2">
        <span class="h1 text-capitalize {{display_size is defined ? 'display-' ~ display_size : ''}} text-dark">{{ page_title | default('Page Title')}}</span>
        <div class="btn-group d-flex justify-content-end d-print-none float-right">
            {% if actions is defined %}
                {% for item in actions %}
                    <span class="d-print-none badge badge-pill badge-{{item.action_class|default('primary')}}">
                    {% if item.link_options is defined %}
                        <a href="{{path(item.action_route, item.link_options)}}" class="btn btn-sm text-{{item.link_class|default('light')}}">{{item.label}}</a>
                    {% else %}
                        <a href="{{path(item.action_route)}}" class="btn btn-sm text-{{item.link_class|default('light')}}">{{item.label}}</a>
                    {% endif %}
                    </span>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    {% if page_subtitle is defined %}
        <div class="col-12 mb-2 mb-2">
            <span class="subtitle">{{ page_subtitle | default('Page Subtitle')}}</span>
        </div>
    {% endif %}
    <hr class="d-print-none border-warning col">
</div>